<android.support.design.widget.CoordinatorLayout android:id="@+id/coordinatorlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1"
        tools:context=".MainActivity"
        >

        <Button
            android:id="@+id/simple_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="simpleDialog"
            android:text="简单提示框"
            />

        <Button
            android:id="@+id/single_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="singleChoiceDialog"
            android:text="单选对话框"
            />

        <Button
            android:id="@+id/multi_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="multiChoiceDialog"
            android:text="多选对话框"
            />

        <Button
            android:id="@+id/custom_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customDialog"
            android:text="自定义对话框"
            />

        <Button
            android:id="@+id/custom_dialog02_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customDialog02"
            android:text="自定义对话框02"
            />

        <Button
            android:id="@+id/bottom_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customBottomDialog"
            android:text="底部对话框"
            />


        <Button
            android:id="@+id/bottom_dialog02_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customBottomDialog02"
            android:text="底部对话框02"
            />
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/jump_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="跳转到自定义样式的dialog"
            />

    </LinearLayout>

    <include layout="@layout/content_bottom_sheet" />

</android.support.design.widget.CoordinatorLayout>